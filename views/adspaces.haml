%h2 Ad Spaces List
- if @adspaces.size > 0
  %form{:method=>'post', :action=>'/adspaces'}
    %p
      Select the add spaces that you want to get your PD links for
    %ul
      - @adspaces.each do |adspace|
        %li
          - if not @selectedAdspaces.nil? and @selectedAdspaces.include?(adspace.xmlattr_id)
            %input{:type => 'checkbox', :id=>'adspace_'+adspace.xmlattr_id ,:name=>'name_adspace_'+adspace.xmlattr_id , :value=>adspace.xmlattr_id , :checked=>'checked'}
          - else
            %input{:type => 'checkbox', :id=>'adspace_'+adspace.xmlattr_id ,:name=>'name_adspace_'+adspace.xmlattr_id , :value=>adspace.xmlattr_id}
          %label{:for=>'adspace_'+adspace.xmlattr_id}
            =adspace.name
    %p
      %input{:type=>'submit', :value=>'Submit'}
- else
  %p
    Oops - No adspaces found

=@selectedAdspaces.inspect
